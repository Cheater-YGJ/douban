@import "../stars/stars-tpl.wxss";

.movie-item {
  width: 100%;
  height: 280rpx;
  border-top: 1px lightgray solid;
  padding-left: 10rpx;
  padding-top: 10rpx;
  position: relative;
}

.coverage {
  width: 200rpx;
  height: 270rpx;
  margin-right: 10rpx;
  float: left;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.director, .actor {
  font-size: 28rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 220rpx;
  bottom: 10rpx;
  font-size: 32rpx;
}

.mark {
  margin-right: 24rpx;
  white-space: nowrap;
  color: #999;
}
